# Write a Python program to Define a function named 'factorial' that calculates the factorial of a number 'n'.

def factorial(n):
    if n == 0:
        return 1
    else:
        return n * factorial(n-1)

num = int(input("Enter a number: "))
print("Factorial:", factorial(num))



##From pdf
def factorial(n):
    ans = 1
    for x in range(1, n+1):
        ans*=x
    return ans
n = int(input("Enter the number to calculate its factorial: "))
ans = factorial(n)
print(f"{n}! = {ans}")
